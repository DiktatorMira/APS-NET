@model IEnumerable<MusicPortal.Models.Genre>
@{
    ViewBag.Title = "Музыкальный портал";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="topbuttons">
    <a asp-action="Index" class="hrefbtn secnd">Вернуться назад</a>
    <a asp-action="ToAddGenre" class="hrefbtn secnd">Добавить жанр</a>
</div>
<div class="list">
    @foreach (var genre in Model) {
        <div class="listplate">
            <div class="leftplate">
                <span class="biggerfont">@genre.Name</span>
            </div>
            <div class="rightplate">
                <a asp-action="ToEditGenre" asp-route-genreId="@genre.Id" class="hrefbtn thrd">Изменить</a>
                <a asp-action="DeleteGenre" asp-route-genreId="@genre.Id" class="hrefbtn thrd">Удалить</a>
            </div>
        </div>
    }
</div>