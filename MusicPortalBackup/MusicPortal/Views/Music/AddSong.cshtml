@model MusicPortal.Models.Song
@{
    ViewBag.Title = "Музыкальный портал";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="AddSong" enctype="multipart/form-data" class="forms song">
    <h2>Добавлениие песни</h2>
    <input asp-for="Title" class="inputs" placeholder="Название песни"/>
    <span asp-validation-for="Title" class="text-danger"></span>
    <select asp-for="Genre!.Name" class="inputs">
        @foreach (var genre in ViewBag.Genres) {
            <option value="@genre.Name">@genre.Name</option>
        }
    </select>
    <select asp-for="Performer!.FullName" class="inputs">
        @foreach (var performer in ViewBag.Performers) {
            <option value="@performer.FullName">@performer.FullName</option>
        }
    </select>
    <input class="btn file" asp-for="Path" type="file" name="uploadedFile" accept="audio/*" />
    <span asp-validation-for="Path" class="text-danger"></span>
    <div class="formbot">
        <a asp-action="Index" class="hrefbtn inbot">Отмена</a>
        <input type="submit" value="Добавить" class="btn inbot"/>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}