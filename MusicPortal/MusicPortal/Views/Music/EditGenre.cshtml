@model MusicPortal.BLL.DTO.GenreDTO
@{
    ViewBag.Title = "Музыкальный портал";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="EditGenre" class="forms mini">
    <input type="hidden" asp-for="Id" />
    <h2>Изменение жанра</h2>
    <input asp-for="Name" class="inputs" placeholder="Название жанра" value="@Model.Name" />
    <span asp-validation-for="Name" class="text-danger"></span>
    <div class="formbot">
        <a asp-action="ToGenres" class="hrefbtn inbot">Отмена</a>
        <input type="submit" value="Изменить" class="btn inbot" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}