@model IEnumerable<MusicPortal.BLL.DTO.GenreDTO>
@{
    ViewBag.Title = @Resources.Resource.PageTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="topbuttons">
    <a asp-action="Index" class="hrefbtn secnd">@Resources.Resource.Back</a>
    <a asp-action="ToAddGenre" class="hrefbtn secnd">@Resources.Resource.AddGenre</a>
</div>
<div class="list">
    @foreach (var genre in Model) {
        <div class="listplate">
            <div class="leftplate">
                <span class="biggerfont">@genre.Name</span>
            </div>
            <div class="rightplate">
                <a asp-action="ToEditGenre" asp-route-genreId="@genre.Id" class="hrefbtn thrd">@Resources.Resource.Edit</a>
                <a asp-action="DeleteGenre" asp-route-genreId="@genre.Id" class="hrefbtn thrd">@Resources.Resource.Delete</a>
            </div>
        </div>
    }
</div>