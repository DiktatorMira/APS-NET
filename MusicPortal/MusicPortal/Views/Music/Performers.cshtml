@model IEnumerable<MusicPortal.BLL.DTO.PerformerDTO>
@{
    ViewBag.Title = @Resources.Resource.PageTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="topbuttons">
    <a asp-action="Index" class="hrefbtn secnd">@Resources.Resource.Back</a>
    <a asp-action="ToAddPerformer" class="hrefbtn secnd">@Resources.Resource.AddPerformer</a>
</div>
<div class="list">
    @foreach (var performer in Model) {
        <div class="listplate">
            <div class="leftplate">
                <span class="biggerfont">@performer.FullName</span>
            </div>
            <div class="rightplate">
                <a asp-action="ToEditPerformer" asp-route-performerId="@performer.Id" class="hrefbtn thrd">@Resources.Resource.Edit</a>
                <a asp-action="DeletePerformer" asp-route-performerId="@performer.Id" class="hrefbtn thrd">@Resources.Resource.Delete</a>
            </div>
        </div>
    }
</div>