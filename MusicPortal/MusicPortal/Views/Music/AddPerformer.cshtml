@model MusicPortal.Models.Performer
@{
    ViewBag.Title = "Музыкальный портал";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="AddPerformer" class="forms mini">
    <h2>Добавлениие исполнителя</h2>
    <input asp-for="FullName" class="inputs" placeholder="ФИО исполнителя" />
    <span asp-validation-for="FullName" class="text-danger"></span>
    <div class="formbot">
        <a asp-action="ToPerformers" class="hrefbtn inbot">Отмена</a>
        <input type="submit" value="Добавить" class="btn inbot" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}